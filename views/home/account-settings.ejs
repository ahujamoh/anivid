	<script>

	$(function(){
		$("#change-password").validationEngine();
	});

	$(".drop-down-menu").click(function(e){
		$(this).siblings().removeClass('open')
		e.stopPropagation();
		$(this).addClass('open');
	});
	
	$(document).click(function(){
		$('.drop-down-menu').removeClass('open');
		$('.share').css('display','none');
	});

	/*popover*/
	$('.popover').click(function(e){
		e.stopPropagation();
		$('.share').css('top',e.pageY-80);
		$('.share').css('display','block');
	});

	//for tabs
	$('.account-settings ul li').click(function(e){
		var attr = $(this).data('attribute');
		$('#'+attr).siblings().hide();

		$('#'+attr).show();
	});

	</script>


