						<div class = "ac-password disp-none" id = "password">

							<div class="change-password-form">
								<h1>Change your password</h1>

								<form action="/updatePassword" method="post" name="change-password-form" id="change-password">
																	
									<div class="input-box">
										<div class="label">
											<label for="existingPassword">Existing password</label>
										</div>
										<div class="input-field">
											<input type="password" name="existingPassword" id="existingPassword" class="validate[required]">
										</div>
									</div>

									<div class="input-box">
										<div class="label">
											<label for="newPassword">New password</label>
										</div>
										<div class="input-field">
											<input type="password" name="newPassword" id="newPassword" class ="validate[required]">
										</div>
									</div>
	
									<div class="input-box">
										<div class="label">
											<label for="confirm-password">Confirm password</label>
										</div>
										<div class="input-field">
											<input type="password" name="confirm-password" id="confirm-password" class ="validate[required]">
										</div>
									</div>
									
									<div class="input-box">
										<div class="submit-btn">
											<button type = "submit" id = "login-submit"class = "btn-primary">Change password</button>
										</div>	
									</div>
								</form><!-- end form -->
